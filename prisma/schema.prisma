generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" 
  url      = env("DATABASE_URL")
}

model Lista {
  id        Int      @id @default(autoincrement())
  nome      String?              
  createdAt DateTime @default(now())
  mes       String    
  total     Float
  itens     Item[]
}

model Item {
  id        Int     @id @default(autoincrement())
  listaId   Int
  nome      String
  quantidade Int
  preco     Float
  subtotal  Float
  lista     Lista   @relation(fields: [listaId], references: [id], onDelete: Cascade)
}

